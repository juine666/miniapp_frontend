<configuration>
    <property name="LOG_PATH" value="logs"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 开发环境：详细日志格式，包含完整堆栈信息 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{50} - %msg%n%ex{full}</pattern>
        </encoder>
        <!-- 确保立即刷新到控制台 -->
        <immediateFlush>true</immediateFlush>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/miniapp-backend.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/miniapp-backend.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 应用包使用DEBUG级别，方便开发调试 -->
    <logger name="com.stylemirror.miniapp_backend" level="DEBUG"/>
    <logger name="com.stylemirror.miniapp_backend.controller" level="DEBUG"/>
    <logger name="com.stylemirror.miniapp_backend.service" level="DEBUG"/>
    <!-- MyBatis Mapper日志 - TRACE级别可以看到完整的SQL和参数 -->
    <logger name="com.stylemirror.miniapp_backend.repository" level="TRACE"/>
    <!-- HTTP客户端日志，可以看到请求响应 -->
    <logger name="org.springframework.web.client" level="DEBUG"/>
    <!-- HTTP请求日志 -->
    <logger name="org.springframework.web.servlet" level="DEBUG"/>
    <!-- MyBatis SQL日志 -->
    <logger name="org.apache.ibatis" level="TRACE"/>
    <logger name="java.sql" level="DEBUG"/>
    <logger name="java.sql.Connection" level="TRACE"/>
    <logger name="java.sql.Statement" level="TRACE"/>
    <logger name="java.sql.PreparedStatement" level="TRACE"/>
    <logger name="java.sql.ResultSet" level="TRACE"/>
    
    <!-- 根日志级别：INFO，但ERROR会显示完整堆栈 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>


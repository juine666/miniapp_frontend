<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stylemirror.miniapp_backend.repository.VoiceMapper">

    <!-- 获取产品的所有语音（分页，按时间倒序） -->
    <select id="selectVoicesByProductId" resultType="com.stylemirror.miniapp_backend.domain.Voice">
        SELECT * FROM voices 
        WHERE product_id = #{productId} 
        ORDER BY created_at DESC
    </select>

</mapper>

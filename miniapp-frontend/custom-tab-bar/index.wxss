.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  z-index: 9999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.08);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  padding-top: 8rpx;
  transition: all 0.3s;
}

.tab-bar-item-selected {
  position: relative;
}

.tab-bar-item-selected::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #fed500 0%, #fcc822 100%);
  border-radius: 0 0 4rpx 4rpx;
}

.tab-bar-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.tab-bar-icon {
  font-size: 44rpx;
  line-height: 1;
  transition: all 0.3s;
}

.tab-bar-item-selected .tab-bar-icon {
  transform: scale(1.2);
}

.tab-bar-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
  transition: all 0.3s;
}

.tab-bar-item-selected .tab-bar-text {
  color: #fed500;
  font-weight: 600;
  font-size: 21rpx;
}

/* 特殊的发布按钮 */
.special-item {
  flex: 1;
  position: relative;
  align-items: center;
  justify-content: flex-start;
  padding-top: 0;
}

.publish-btn {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #fed500 0%, #fcc822 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 6rpx 16rpx rgba(254, 213, 0, 0.4);
  z-index: 10;
}

.publish-icon {
  font-size: 64rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

.special-item .tab-bar-text {
  margin-top: 60rpx;
  color: #888;
}

.special-item.tab-bar-item-selected .tab-bar-text {
  color: #333;
  font-weight: 500;
}

.publish-btn:active {
  opacity: 0.9;
  transform: translateX(-50%) scale(0.95);
}


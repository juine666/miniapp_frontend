.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: none;
  box-shadow: 0 -4rpx 16rpx rgba(102, 126, 234, 0.08);
  z-index: 9999;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.08);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  padding-top: 8rpx;
  transition: all 0.3s;
}

.tab-bar-item-selected {
  position: relative;
}

.tab-bar-item-selected::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 6rpx 6rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.tab-bar-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.tab-bar-icon {
  font-size: 44rpx;
  line-height: 1;
  transition: all 0.3s;
}

.tab-bar-item-selected .tab-bar-icon {
  transform: scale(1.15);
  filter: drop-shadow(0 2rpx 8rpx rgba(102, 126, 234, 0.3));
}

.tab-bar-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
  transition: all 0.3s;
}

.tab-bar-item-selected .tab-bar-text {
  color: #667eea;
  font-weight: 600;
  font-size: 21rpx;
}

/* 特殊的发布按钮 */
.special-item {
  flex: 1;
  position: relative;
  align-items: center;
  justify-content: flex-start;
  padding-top: 0;
}

.publish-btn {
  width: 108rpx;
  height: 108rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: -44rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.45);
  z-index: 10;
  border: 6rpx solid rgba(255, 255, 255, 0.95);
}

.publish-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 400;
  line-height: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.special-item .tab-bar-text {
  margin-top: 60rpx;
  color: #888;
}

.special-item.tab-bar-item-selected .tab-bar-text {
  color: #333;
  font-weight: 500;
}

.publish-btn:active {
  opacity: 0.95;
  transform: translateX(-50%) scale(0.92);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.35);
}


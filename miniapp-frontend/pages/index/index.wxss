.index-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 滚动公告栏 */
.notice-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx 0;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.notice-content {
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  animation: bounce 2s ease-in-out infinite;
}

.notice-text-wrapper {
  display: flex;
  align-items: center;
  overflow: hidden;
  animation: scroll 20s linear infinite;
}

.notice-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  letter-spacing: 2rpx;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
  padding-right: 80rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

@keyframes scroll {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

/* 搜索框 */
.search-bar {
  background: #fff;
  padding: 16rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 72rpx;
  line-height: 72rpx;
}

.search-input::placeholder {
  color: #999;
}

.search-clear {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  margin-left: 12rpx;
  border-radius: 50%;
  background: #e0e0e0;
  transition: all 0.3s;
}

.search-clear:active {
  background: #d0d0d0;
  transform: scale(0.9);
}

/* 分类和排序栏 */
.filter-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  position: sticky;
  top: 144rpx;
  z-index: 99;
  gap: 32rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  flex: 1;
}

.filter-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 12rpx;
  font-weight: 500;
  white-space: nowrap;
}

.filter-picker {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 24rpx;
  border: none;
  transition: all 0.3s;
  flex: 1;
  min-width: 0;
}

.filter-picker:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.filter-text {
  font-size: 26rpx;
  color: #333;
  margin-right: 8rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.filter-arrow {
  font-size: 18rpx;
  color: #999;
  transition: transform 0.3s;
  flex-shrink: 0;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
  gap: 16rpx;
}
.goods-card {
  width: calc((100% - 16rpx) / 2);
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 0;
  padding-bottom: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  transition: all 0.3s;
  box-sizing: border-box;
}
.goods-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 8rpx rgba(0,0,0,0.12);
}
.goods-content {
  flex: 1;
}
.action-buttons {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  z-index: 10;
}
.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.98);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}
.action-btn:active {
  transform: scale(0.9);
}
.action-icon {
  font-size: 32rpx;
}
.favorite-btn.favorited {
  background: rgba(255,107,107,0.15);
}
.share-btn {
  /* 分享按钮样式 */
}
.goods-img {
  width: 100%;
  height: 280rpx;
  border-radius: 0;
  object-fit: cover;
  background: #f8f8f8;
}
.goods-title {
  font-size: 28rpx;
  font-weight: 600;
  margin: 16rpx 16rpx 8rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  min-height: 78rpx;
}
.goods-meta {
  display: flex;
  align-items: center;
  margin: 0 16rpx 16rpx;
  justify-content: flex-start;
}
.goods-price {
  color: #ff4757;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0;
}
.empty-tip {
  width: 100%;
  margin: 120rpx auto 0;
  color: #999;
  text-align: center;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.profile-container{background:#f6f6f6;min-height:100vh;padding-bottom:30rpx}
.card{background:#fff;border-radius:18rpx;box-shadow:0 6rpx 22rpx #0001;padding:0;margin:22rpx 20rpx;overflow:hidden}
.card-title{font-size:28rpx;color:#666;padding:20rpx 24rpx;border-bottom:1rpx solid #f0f0f0;font-weight:600}
.card-row{display:flex;align-items:center;padding:24rpx;border-bottom:1rpx solid #f0f0f0;min-height:88rpx}
.card-row:last-child{border-bottom:none}
.row-label{width:140rpx;font-size:30rpx;color:#333;flex-shrink:0}
.row-value{flex:1;display:flex;align-items:center;justify-content:flex-end;gap:12rpx}
.row-input{flex:1;text-align:right;font-size:30rpx;color:#333;border:none;padding:0}
.row-input::placeholder{color:#999}
.avatar-preview{width:64rpx;height:64rpx;border-radius:32rpx;background:#f5f5f5}
.row-arrow{font-size:32rpx;color:#ccc}
.save-btn{width:calc(100% - 48rpx);margin:20rpx 24rpx 24rpx;background:linear-gradient(90deg,#fcc822,#f6b733 80%);color:#fff;border:none;border-radius:12rpx;padding:24rpx 0;font-size:30rpx;font-weight:600}
.save-btn-main{
  width:calc(100% - 40rpx);
  margin:40rpx 20rpx 20rpx;
  background:linear-gradient(90deg,#fcc822,#f6b733 80%);
  color:#fff;
  border:none;
  border-radius:12rpx;
  padding:28rpx 0;
  font-size:32rpx;
  font-weight:600;
  box-shadow:0 6rpx 20rpx rgba(252,200,34,0.3);
}


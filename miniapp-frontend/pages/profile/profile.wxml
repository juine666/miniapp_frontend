<view class="profile-container">
  <view class="card">
    <view class="card-title">基本资料</view>
    <view class="card-row" bindtap="chooseAvatar">
      <view class="row-label">头像</view>
      <view class="row-value">
        <image class="avatar-preview" src="{{user.avatarUrl || 'https://img.yzcdn.cn/vant/cat.jpeg'}}" mode="aspectFill"/>
        <text class="row-arrow">></text>
      </view>
    </view>
    <view class="card-row">
      <view class="row-label">昵称</view>
      <input class="row-input" placeholder="请输入昵称" value="{{user.nickname}}" bindinput="onInput" data-key="nickname"/>
    </view>
  </view>

  <view class="card">
    <view class="card-title">联系方式</view>
    <view class="card-row">
      <view class="row-label">电话</view>
      <input class="row-input" placeholder="请输入电话" value="{{contact.phone}}" bindinput="onContact" data-key="phone"/>
    </view>
    <view class="card-row">
      <view class="row-label">微信号</view>
      <input class="row-input" placeholder="请输入微信号" value="{{contact.wechatId}}" bindinput="onContact" data-key="wechatId"/>
    </view>
    <view class="card-row">
      <view class="row-label">邮箱</view>
      <input class="row-input" placeholder="请输入邮箱" value="{{contact.email}}" bindinput="onContact" data-key="email"/>
    </view>
  </view>
  
  <button class="save-btn-main" bindtap="saveAll">保存所有资料</button>
</view>


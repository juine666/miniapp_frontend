.xy-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 0;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.batch-entry {
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
}

.batch-text {
  color: #666;
}

.batch-link {
  color: #ff6b35;
  font-weight: 500;
}

.xy-card {
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 图片上传区域 */
.images-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: calc((100% - 40rpx) / 3);
  aspect-ratio: 1;
  border-radius: 12rpx;
  background: #f8f8f8;
  border: 2rpx dashed #ddd;
  overflow: hidden;
  position: relative;
}

.image-item:active {
  opacity: 0.8;
}

.add-image {
  display: flex;
  align-items: center;
  justify-content: center;
  border-color: #ff6b35;
}

.add-placeholder {
  color: #999;
  font-size: 60rpx;
  font-weight: 300;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}

.image-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.upload-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  z-index: 10;
  border-radius: 12rpx;
}

/* 分类选择 */
.xy-input-group {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 100rpx;
  box-sizing: border-box;
}

.category-group {
  justify-content: space-between;
}

.category-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.picker-value {
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.picker-value.placeholder {
  color: #999;
}

.xy-label {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  min-width: 120rpx;
}

/* 描述输入 */
.desc-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.desc-label {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.6;
}

.optional-text {
  color: #999;
  font-size: 26rpx;
  font-weight: normal;
  margin-left: 4rpx;
}

.xy-input.desc {
  width: 100%;
  min-height: 200rpx;
  padding: 0;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  border: none;
  background: transparent;
  box-sizing: border-box;
  display: block;
  margin-top: 0;
}

/* 价格输入 */
.xy-input-group.price-group {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.xy-input.price {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
  padding: 0;
  margin: 0;
  text-align: left;
}

.xy-input.price::placeholder {
  color: #ccc;
  font-weight: normal;
}

/* 位置选择 */
.xy-input-group.location-group {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.location-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.location-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
}

.location-text {
  font-size: 30rpx;
  color: #333;
  text-align: right;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-text.placeholder {
  color: #999;
}

.location-icon {
  font-size: 32rpx;
}

.location-quick-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s;
}

.location-quick-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.quick-btn-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

/* 发布按钮 */
.xy-btn-primary {
  width: calc(100% - 64rpx);
  margin: 40rpx 32rpx 200rpx 32rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.xy-btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.nearby-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 位置信息栏 */
.location-bar {
  background: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  position: sticky;
  top: 0;
  z-index: 100;
}

.location-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.location-radius {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.retry-btn {
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #fed500 0%, #fcc822 100%);
  color: #333;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
  gap: 16rpx;
}

.goods-card {
  width: calc((100% - 16rpx) / 2);
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 0;
  padding-bottom: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  transition: all 0.3s;
  box-sizing: border-box;
}

.goods-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 8rpx rgba(0,0,0,0.12);
}

.goods-content {
  flex: 1;
}

.action-buttons {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  z-index: 10;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.98);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 32rpx;
}

.favorite-btn.favorited {
  background: rgba(255,107,107,0.15);
}

.goods-img {
  width: 100%;
  height: 280rpx;
  border-radius: 0;
  object-fit: cover;
  background: #f8f8f8;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 600;
  margin: 16rpx 16rpx 8rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  min-height: 78rpx;
}

.goods-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 16rpx 16rpx;
}

.goods-price {
  color: #ff4757;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0;
}

.goods-distance {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.empty-tip {
  width: 100%;
  margin: 120rpx auto 0;
  color: #999;
  text-align: center;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.loading-tip {
  width: 100%;
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}


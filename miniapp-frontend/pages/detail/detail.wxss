.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f9ff;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

/* 图片区域 */
.image-section {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #f0f1ff;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.main-image {
  width: 100%;
  height: 100%;
  cursor: pointer;
}

.image-indicator {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  z-index: 10;
}

/* 右下角按钮 */
.favorite-btn,
.comment-btn {
  position: absolute;
  bottom: 16rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  z-index: 11;
  transition: all 0.3s;
}

.favorite-btn {
  right: 80rpx;
}

.comment-btn {
  right: 16rpx;
  flex-direction: column;
  gap: 2rpx;
}

.favorite-btn:active,
.comment-btn:active {
  transform: scale(0.9);
}

.favorite-btn.favorited {
  background: rgba(255, 107, 107, 0.9);
  color: #fff;
}

.comment-icon {
  font-size: 28rpx;
}

.comment-count {
  font-size: 20rpx;
  color: #ff4757;
  font-weight: 600;
}

/* 商品信息 */
.info-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.meta-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.meta-label {
  color: #999;
  margin-right: 12rpx;
  min-width: 100rpx;
}

.meta-value {
  color: #333;
  flex: 1;
}

/* 卖家信息 */
.seller-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.seller-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.seller-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.seller-info {
  flex: 1;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.seller-tag {
  font-size: 24rpx;
  color: #999;
}

.contact-btn,
.edit-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.seller-contact {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 12rpx;
  font-size: 26rpx;
}

.contact-label {
  color: #999;
  min-width: 80rpx;
}

.contact-value {
  color: #333;
  flex: 1;
}

.copy-btn {
  background: #f0f0f0;
  color: #666;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 语音体验区 */
.voices-section {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.add-btn {
  background: #ffd93d;
  color: #333;
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.voice-input-box {
  background: #f8f9ff;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.recording-status {
  text-align: center;
  margin-bottom: 12rpx;
  color: #666;
  font-size: 26rpx;
}

.status-text {
  color: #999;
}

.recording-text {
  color: #ff4757;
  font-weight: 600;
}

.recording-controls {
  display: flex;
  gap: 12rpx;
  justify-content: center;
}

.record-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
  flex: 1;
}

.record-btn.stop {
  background: #ff4757;
}

.voices-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.voice-item {
  display: flex;
  gap: 12rpx;
  background: #f8f9ff;
  padding: 12rpx;
  border-radius: 12rpx;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.voice-content {
  flex: 1;
  font-size: 26rpx;
}

.user-name {
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.voice-time {
  color: #999;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

.voice-player {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.label {
  color: #666;
  font-size: 24rpx;
}

.play-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.text-content {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  padding: 8rpx 0;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.modal-content {
  width: 100%;
  height: 80vh;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 36rpx;
  color: #999;
  cursor: pointer;
}

.comment-input-header {
  padding: 12rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.publish-btn {
  width: 100%;
  background: #ffd93d;
  color: #333;
  border: none;
  padding: 12rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.comment-input-box {
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.emotion-bar {
  margin-bottom: 12rpx;
}

.emotion-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.emotion-list {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.emotion-btn {
  padding: 6rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
}

.emotion-btn.selected {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.comment-input {
  width: 100%;
  border: 1rpx solid #f0f0f0;
  border-radius: 12rpx;
  padding: 12rpx;
  font-size: 26rpx;
  margin-bottom: 12rpx;
  min-height: 80rpx;
  box-sizing: border-box;
}

.input-actions {
  display: flex;
  gap: 12rpx;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  border: none;
  padding: 10rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.submit-btn {
  background: #667eea;
  color: #fff;
}

.comments-list {
  flex: 1;
  overflow-y: auto;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.comment-item {
  display: flex;
  gap: 12rpx;
  background: #f8f9ff;
  padding: 12rpx;
  border-radius: 12rpx;
  position: relative;
}

.comment-main {
  flex: 1;
  font-size: 26rpx;
}

.user-name {
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.comment-text {
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.5;
  word-break: break-all;
}

.translate-box {
  background: #f0f0f0;
  padding: 12rpx;
  border-radius: 8rpx;
  margin: 8rpx 0;
  border-left: 3rpx solid #667eea;
}

.translate-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.translate-label {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

.play-voice-btn {
  background: #667eea;
  color: #fff;
  border: none;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.translate-text {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  word-break: break-all;
}

.comment-meta {
  display: flex;
  gap: 12rpx;
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.like-btn {
  cursor: pointer;
  color: #ff4757;
}

/* 长按菜单 */
.context-menu {
  position: absolute;
  background: rgba(0, 0, 0, 0.9);
  color: #fff;
  border-radius: 8rpx;
  z-index: 100;
  min-width: 120rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.menu-item {
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  text-align: center;
}

.menu-item:last-child {
  border-bottom: none;
}

/* 评论输入框 */
.comment-input-box {
  background: #fff;
  padding: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 0;
}

.emotion-bar {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.emotion-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 12rpx;
  min-width: 60rpx;
}

.emotion-list {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  flex: 1;
}

.emotion-btn {
  font-size: 28rpx;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  transition: all 0.2s;
  cursor: pointer;
}

.emotion-btn.selected {
  background: #667eea;
  transform: scale(1.2);
}

/* 输入模式选项卡 */
.input-mode-tabs {
  display: flex;
  gap: 0;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.input-mode-tabs .tab {
  flex: 1;
  padding: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  border-bottom: 3rpx solid transparent;
  transition: all 0.3s;
}

.input-mode-tabs .tab.active {
  color: #667eea;
  border-bottom-color: #667eea;
  font-weight: 600;
}

/* 文字输入框 */
.comment-input {
  width: 100%;
  min-height: 100rpx;
  padding: 12rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

/* 语音输入区域 */
.voice-input-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 16rpx;
  background: #f8f9ff;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

/* 语音录制按钮 */
.voice-record-btn {
  width: 100%;
  padding: 32rpx 24rpx;
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.voice-record-btn.recording {
  background: #ff4757;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.record-text {
  display: block;
}

/* 语音识别预览 */
.voice-preview {
  background: #fff;
  padding: 12rpx;
  border-radius: 6rpx;
  border-left: 3rpx solid #667eea;
}

.preview-label {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.preview-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

/* 输入框操作按钮 */
.input-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 12rpx;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  border: none;
  border-radius: 6rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.2s;
}

.cancel-btn {
  background: #f0f0f0;
  color: #999;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.submit-btn {
  background: #667eea;
  color: #fff;
}

.submit-btn:active {
  background: #556dd4;
}


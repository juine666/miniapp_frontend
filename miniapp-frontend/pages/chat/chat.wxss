.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

/* 标题栏 */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  padding-top: 20rpx;
}

.back-btn {
  font-size: 32rpx;
  color: #333;
  padding: 8rpx;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.header-spacer {
  width: 40rpx;
}

/* 消息列表 */
.messages-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.messages-inner {
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  margin-bottom: 20rpx;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 接收的消息 */
.received-message {
  display: flex;
  align-items: flex-end;
  gap: 10rpx;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.avatar-placeholder {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  flex-shrink: 0;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.bubble {
  max-width: 85%;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  word-break: break-word;
  word-wrap: break-word;
  font-size: 28rpx;
  line-height: 1.4;
}

.received-bubble {
  background: #fff;
  color: #333;
  border: 1rpx solid #eee;
}

/* 发送的消息 */
.sent-message {
  display: flex;
  align-items: flex-end;
  gap: 10rpx;
  justify-content: flex-end;
}

.sent-message .message-content {
  align-items: flex-end;
}

.sent-bubble {
  background: #0084ff;
  color: #fff;
}

.time {
  font-size: 20rpx;
  color: #ccc;
  margin-top: 4rpx;
}

.translated-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  padding: 10rpx 12rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  line-height: 1.4;
  max-width: 85%;
}

.empty-hint {
  text-align: center;
  color: #999;
  padding: 40rpx;
  font-size: 28rpx;
}

/* 输入框 */
.input-area {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.reply-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background: #f9f9f9;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  color: #666;
}

.reply-label {
  flex: 1;
}

.reply-close {
  font-size: 32rpx;
  color: #999;
  padding: 0 10rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
}

.input-box {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 24rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
}

.input-placeholder {
  color: #bbb;
}

.send-btn {
  background: #0084ff;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
  min-width: 80rpx;
}

/* 长按菜单 */
.context-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.context-menu-content {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  min-width: 160rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.context-menu-item {
  display: block;
  width: 100%;
  padding: 16rpx 20rpx;
  text-align: left;
  font-size: 28rpx;
  color: #333;
  border: none;
  background: transparent;
  border-bottom: 1rpx solid #f0f0f0;
}

.context-menu-item:last-child {
  border-bottom: none;
}

.context-menu-item.cancel {
  color: #0084ff;
}

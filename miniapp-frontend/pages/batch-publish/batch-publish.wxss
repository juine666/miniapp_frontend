.batch-container {
  min-height: 100vh;
  background: #f6f6f6;
  padding-bottom: 120rpx;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.action-btn {
  flex: 1;
  min-height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  background: #f8f8f8;
  color: #333;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  padding: 16rpx 8rpx;
}

.action-btn.primary {
  background: linear-gradient(90deg, #fcc822, #f6b733);
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-tip {
  font-size: 22rpx;
  opacity: 0.8;
}

.paste-section {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.paste-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.paste-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.paste-tip {
  font-size: 24rpx;
  color: #999;
}

.paste-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.products-list {
  padding: 0 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-index {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.delete-btn {
  padding: 8rpx 24rpx;
  background: #ff4757;
  color: #fff;
  border-radius: 6rpx;
  font-size: 24rpx;
  border: none;
}

.images-section {
  margin-bottom: 20rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-img-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 0 0 0 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.product-form {
  margin-top: 20rpx;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.picker-value {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.desc-input {
  flex: 1;
  min-height: 120rpx;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.price-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.unit {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.publish-single-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #fcc822, #f6b733);
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
  border: none;
  margin-top: 20rpx;
}

.batch-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
}

.batch-publish-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(90deg, #fcc822, #f6b733);
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.batch-publish-btn[disabled] {
  opacity: 0.6;
}

.empty-state {
  padding: 200rpx 40rpx;
  text-align: center;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 28rpx;
  color: #ccc;
}


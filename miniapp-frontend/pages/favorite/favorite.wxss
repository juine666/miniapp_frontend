.favorite-container{
  background:#f5f5f5;
  min-height:100vh;
  padding:0;
  padding-bottom:calc(140rpx + env(safe-area-inset-bottom));
}

.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx;
  gap: 16rpx;
}

.goods-card {
  width: calc((100% - 16rpx) / 2);
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 0;
  padding-bottom: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  transition: all 0.3s;
  box-sizing: border-box;
}

.goods-card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 8rpx rgba(0,0,0,0.12);
}

.goods-content {
  flex: 1;
}

.goods-img {
  width: 100%;
  height: 280rpx;
  border-radius: 0;
  object-fit: cover;
  background: #f8f8f8;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 600;
  margin: 16rpx 16rpx 8rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  min-height: 78rpx;
}

.goods-meta {
  display: flex;
  align-items: center;
  margin: 0 16rpx 16rpx;
  justify-content: flex-start;
}

.goods-price {
  color: #ff4757;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0;
}

.empty-tip {
  width: 100%;
  margin: 120rpx auto 0;
  color: #999;
  text-align: center;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.loading-tip {
  width: 100%;
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  font-size: 28rpx;
}


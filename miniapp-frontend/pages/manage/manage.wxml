<view class="manage-container">
  <!-- 标签页 -->
  <view class="tabs">
    <view class="tab-item {{activeTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">
      我发布的
    </view>
    <view class="tab-item {{activeTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">
      我关注的
    </view>
  </view>
  
  <!-- 商品列表 -->
  <view class="goods-list">
    <view wx:for="{{currentProducts}}" wx:key="id" class="goods-card" bindtap="goDetail" data-id="{{item.id}}" data-product="{{item}}">
      <view class="goods-content">
        <image class="goods-img" src="{{item.coverUrl || 'https://img.yzcdn.cn/vant/cat.jpeg'}}" mode="aspectFill"/>
        <view class="goods-title">{{item.name}}</view>
        <!-- 下架了价格收费提示 -->
        <!-- <view class="goods-meta">
          <view class="goods-price">￥{{item.price}}</view>
        </view> -->
        <view class="status-row">
          <view class="status {{item.status === 'PUBLISHED' ? 'on' : 'off'}}">{{item.status === 'PUBLISHED' ? '已上架' : '已下架'}}</view>
          <view wx:if="{{activeTab === 0}}" class="toggle-btn" catchtap="toggleStatus" data-id="{{item.id}}" data-status="{{item.status}}">{{item.status === 'PUBLISHED' ? '下架' : '上架'}}</view>
        </view>
      </view>
    </view>
    <view wx:if="{{!currentProducts.length}}" class="empty-tip">
      {{activeTab === 0 ? '暂无发布的商品' : '暂无关注的商品'}}
    </view>
  </view>
</view>



